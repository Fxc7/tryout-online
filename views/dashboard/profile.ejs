<main>
  <div class="p-4 mx-auto max-w-screen-2xl md:p-6">

    <div class="rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03] lg:p-6">
      <h3 class="mb-5 text-lg font-semibold text-gray-800 dark:text-white/90 lg:mb-7">
        Detail Profile
      </h3>

      <div class="p-5 mb-6 border border-gray-200 rounded-2xl dark:border-gray-800 lg:p-6">
        <div class="flex flex-col gap-5 xl:flex-row xl:items-center xl:justify-between">
          <div class="flex flex-col items-center w-full gap-6 xl:flex-row">
            <div class="w-20 h-20 flex justify-center items-center border border-gray-200 rounded-full dark:border-gray-800">
              <p class="text-3xl text-gray-500 dark:text-rose-600 font-bold"><%= user.profile %></p>
            </div>
            <div class="order-3 xl:order-2">
              <h4 class="mb-2 text-lg font-semibold text-center text-gray-800 dark:text-white/90 xl:text-left">
                <%= user.name %>
              </h4>
              <div class="flex flex-col items-center gap-1 text-center xl:flex-row xl:gap-3 xl:text-left">
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  <%= user.email %>
                </p>
                <div class="hidden h-3.5 w-px bg-gray-300 dark:bg-gray-700 md:block"></div>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  <%= user.country + ', ' + user.city %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="p-5 mb-6 border border-gray-200 rounded-2xl dark:border-gray-800 lg:p-6">
        <div class="flex flex-col gap-6 lg:flex-row lg:items-start lg:justify-between">
          <div>
            <h4 class="text-lg mb-5 font-semibold text-gray-800 dark:text-white/90 lg:mb-6">
              Informasi Pribadi
            </h4>

            <div class="grid grid-cols-1 gap-4 lg:grid-cols-2 lg:gap-7 2xl:gap-x-32">
              <div>
                <p class="mb-2 text-xs leading-normal text-gray-500 dark:text-gray-400">
                  Nama depan
                </p>
                <p class="text-sm font-medium text-gray-800 dark:text-white/90">
                  <%= user.first_name %>
                </p>
              </div>

              <div>
                <p class="mb-2 text-xs leading-normal text-gray-500 dark:text-gray-400">
                  Nama Belakang
                </p>
                <p class="text-sm font-medium text-gray-800 dark:text-white/90">
                  <%= user.last_name %>
                </p>
              </div>

              <div>
                <p class="mb-2 text-xs leading-normal text-gray-500 dark:text-gray-400">
                  Alamat Email
                </p>
                <p class="text-sm font-medium text-gray-800 dark:text-white/90">
                  <%= user.email %>
                </p>
              </div>

              <div>
                <p class="mb-2 text-xs leading-normal text-gray-500 dark:text-gray-400">
                  Nomor Telepon
                </p>
                <input class="text-sm outline-none bg-transparent border-0 font-medium text-gray-800 dark:text-white/90" x-mask="9999 9999 9999"
                  value="<%= user.phone %>" readonly />
              </div>

              <div>
                <p class="mb-2 text-xs leading-normal text-gray-500 dark:text-gray-400">
                  Bio
                </p>
                <p class="text-sm font-medium text-gray-800 dark:text-white/90">
                  <%= user.bio %>
                </p>
              </div>
            </div>
          </div>

          <%- include('../partials/edit.ejs', { objectData: { title: 'Edit Personal Information', description: 'Perbarui personal info kamu.' }, inputs: [ { label: 'Nama Depan', name: 'first_name', value: user.first_name } , { label: 'Nama Belakang', name: 'last_name', value: user.last_name } , { label: 'Alamat Email', type: 'email', name: 'email', value: user.email } , { label: 'Nomor Telepon', type: 'text', name: 'phone', value: user.phone } , { label: 'Biography', name: 'bio', value: user.bio } ]}) %>
        </div>
      </div>
      <div class="p-5 border border-gray-200 rounded-2xl dark:border-gray-800 lg:p-6">
        <div class="flex flex-col gap-6 lg:flex-row lg:items-start lg:justify-between">
          <div>
            <h4 class="text-lg mb-5 font-semibold text-gray-800 dark:text-white/90 lg:mb-6">
              Informasi Alamat
            </h4>

            <div class="grid grid-cols-1 gap-4 lg:grid-cols-2 lg:gap-7 2xl:gap-x-32">
              <div>
                <p class="mb-2 text-xs leading-normal text-gray-500 dark:text-gray-400">
                  Negara
                </p>
                <p class="text-sm font-medium text-gray-800 dark:text-white/90">
                  <%= user.country %>
                </p>
              </div>

              <div>
                <p class="mb-2 text-xs leading-normal text-gray-500 dark:text-gray-400">
                  Kota
                </p>
                <p class="text-sm font-medium text-gray-800 dark:text-white/90">
                  <%= user.city %>
                </p>
              </div>
            </div>
          </div>
          <%- include('../partials/edit.ejs', { objectData: { title: 'Edit Alamat', description: 'Perbarui profile alamat kamu.' }, inputs: [ { label: 'Negara', name: 'country', value: user.country } , { label: 'Kota', name: 'city', value: user.city } ] }) %>
        </div>
      </div>
    </div>
  </div>
</main>
<%- include('../partials/modals.ejs') %>